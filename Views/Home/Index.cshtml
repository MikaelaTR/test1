@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home";
}

<div class="login text-center">
    <h1 class="display-4">Welcome to AdvancedProjectMVC</h1> 
    <div class="login_logo" class="text-white">
        <img src="https://placeholder.com/wp-content/uploads/2018/10/placeholder.com-logo3.png" alt="" />
    </div>
    @if (SignInManager.IsSignedIn(User)) //If logged in
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <div class="login_buttons" className="login_buttons" id="loginbutton">
            <button class="login_button" onclick="window.location.href='Identity/Account/Login';">
                Login
            </button>
            <button class="login_button" onclick="window.location.href='Identity/Account/Register';">
                Sign Up
            </button>
        </div>
    }

</div>


