@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home";
}

<div class="login text-center">
    <h1 class="display-4">Welcome to AdvancedProjectMVC</h1>
    <div class="login_logo text-white">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/93/No-logo.svg/1200px-No-logo.svg.png" alt="" />
    </div>
    @if (SignInManager.IsSignedIn(User)) //If logged in
    {
        <h3>Hello @User.Identity?.Name!</h3>
    }
    else
    {
        <div class="login_buttons" className="login_buttons" id="loginbutton">
            <a class="btn login_button" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="btn login_button" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
        </div>
    }

</div>
