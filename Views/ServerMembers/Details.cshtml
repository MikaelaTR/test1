@model AdvancedProjectMVC.Models.ServerMember

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ServerMember</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Server)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Server.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" asp-controller="Servers">Back to Server</a>
    <a asp-action="Create" asp-controller="Servers" asp-route-member1=" @User.Identity.Name" asp-route-member2="@Model.ApplicationUser.UserName" asp-route-memberId="@Model.ApplicationUserId">Open Private DM</a>
</div>
