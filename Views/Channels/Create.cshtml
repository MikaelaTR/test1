@model AdvancedProjectMVC.Models.Channel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-xxl-5">
    <h1>Create Channel</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ChannelName" class="control-label">Channel Name</label>
                    <input asp-for="ChannelName" class="form-control" />
                    <span asp-validation-for="ChannelName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ServerId" class="form-control visually-hidden" id="serverId" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-secondary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a onclick="history.back()" title="Back to server list" class="btn btn-danger align-self-center">
            Cancel
        </a>
    </div>
</div>

<script>
    const serverId = new URLSearchParams(window.location.search).get("ServerId");
    if(serverId != null) {
        document.getElementById("serverId").value = serverId;
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
