@model AdvancedProjectMVC.Models.SharedFile
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "File Sharing";
}

<h1> Upload to @ViewBag.ContainerName</h1>

<form method="post" asp-controller="FileSharing" asp-action="UploadFile" enctype="multipart/form-data">
    <p>Upload file</p>
    <input type="hidden" asp-for="ServerName" value="@ViewBag.ContainerName" />
    <input class="form-control" type="file" asp-for="TempFile" required/>
    <input class="btn btn-success" type="submit" value="Upload" />
</form>

