@{
    ViewData["Title"] = "File Sharing";
}

<h1> Share File</h1>

<form method="post" asp-controller="FileSharing" asp-action="UploadFile">
    <p>Upload file</p>
    <input class="form-control" name="files" type="file" />
    <input class="btn btn-success" type="submit" value="Upload" />
</form>
