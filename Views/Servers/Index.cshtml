<div class="flex-container">
    <div class="toolbar flex-child">
        <div class="toolbar_header">
            <p class="toolbar_header">@User.Identity?.Name</p>
        </div>
        <div class="toolbar_buttons">
            <a asp-action="Create" class="btn btn-primary toolbar_button rounded-lg">Create Server</a>
        </div>
    </div>

    <div class="flex-child">
        <header class="flex-child">
            <h1>Server List</h1>
        </header>
        <div class="card-container">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <a class="card-title" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ServerName)</a>
                        </h3>
                    </div>
                    <div class="card-body">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-ellipsis-h"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>
    
    <div class="toolbar flex-child">
        <div class="toolbar_header">
            <p class="toolbar_header">Members</p>
        </div>
        <div class="toolbar_buttons">

        </div>
    </div>
</div>

