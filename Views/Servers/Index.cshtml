@model IEnumerable<AdvancedProjectMVC.Models.Server>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <h1>Server List</h1>
</header>


<div class="toolbar">
    <div class="toolbar_header">
        <h3>ToolBar</h3>
    </div>
    <div class="toolbar_buttons">
        <a class="btn btn-primary toolbar_button rounded-lg" asp-action="Create">Create Server</a>
    </div>
</div>
<main>
    <div class = "main">
        <div class="card-container">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <a class="card-title" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ServerName)</a>
                        </h3>
                    </div>
                    <div class="card-body">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-ellipsis-h"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>

