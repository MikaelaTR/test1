@model AdvancedProjectMVC.Models.Server

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-xxl-5">
    <h1>Create Server</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ServerName" class="control-label">Server Name</label>
                    <input asp-for="ServerName" class="form-control" />
                    <span asp-validation-for="ServerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create Server" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-sm btn-primary" asp-action="Index">Cancel</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
