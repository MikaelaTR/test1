@model AdvancedProjectMVC.Models.Server

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Server</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServerName)
        </dd>
    </dl>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <h4>Channels</h4>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Channels)
            {
                <tr>
                    <td>
                        <a class="btn-link text-decoration-none" asp-controller="Channels" asp-action="Details" asp-route-id="@item.Id">@item.ChannelName</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <a asp-controller="FileSharing" asp-action="Index" asp-route-serverName="@Model.ServerName">View Shared Files</a>
</div>